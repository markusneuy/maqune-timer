{
    "plugins": [
        "stylelint-selector-bem-pattern",
        "stylelint-order"
    ],
    "extends": "stylelint-config-standard",
    "rules": {
        "indentation": 2,
        "plugin/selector-bem-pattern": {
            "preset": "bem"
        },
        "order/properties-alphabetical-order": true,
        "at-rule-no-unknown": [
            true, {
                "ignoreAtRules": ["critical"]
            }
        ]
    }
}